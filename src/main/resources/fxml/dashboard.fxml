<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.frontend.controller.DashboardController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <left>
        <VBox spacing="20" prefWidth="250" styleClass="sidebar">
            <padding><Insets top="20" left="15" right="15"/></padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="40" preserveRatio="true">
                    <Image url="@../assets/images/logo.jpeg" />
                </ImageView>
                <Label text="SecureBank" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>

            <Button text="Dashboard" onAction="#handleDashboardNavigation" styleClass="sidebar-btn-active" maxWidth="Infinity"/>
            <Button text="Transfer" onAction="#handleTransferNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>
            <Button text="Payments" onAction="#handlePaymentsNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>
            <Button text="Cards" onAction="#handleCardsNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>
            <Button text="My Profile" onAction="#handleProfileNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" styleClass="sidebar-btn-logout" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f8f9fa;">
            <VBox spacing="25" style="-fx-padding: 30;">

                <HBox alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label fx:id="welcomeLabel" text="Welcome back!" style="-fx-font-size: 26; -fx-font-weight: bold;"/>
                        <Label fx:id="topAccountLabel" text="Account: ---" style="-fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </HBox>

                <HBox spacing="20">
                    <VBox styleClass="card" prefWidth="300" spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Checking Account" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
                        <Label fx:id="checkingBalanceLabel" text="\$0.00" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label fx:id="checkingAccNumLabel" text="Acc: ---" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                    </VBox>
                    <VBox styleClass="card" prefWidth="300" spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Savings Account" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
                        <Label fx:id="savingsBalanceLabel" text="\$0.00" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label fx:id="savingsAccNumLabel" text="Inactive" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                    </VBox>
                    <VBox styleClass="card" prefWidth="300" spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Investment" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
                        <Label fx:id="investmentBalanceLabel" text="\$0.00" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label fx:id="investmentAccNumLabel" text="Inactive" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
                    </VBox>
                </HBox>

                <VBox spacing="10" style="-fx-background-color: #1a2e44; -fx-padding: 25; -fx-background-radius: 15;">
                    <Label text="Total Available Balance" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14;"/>
                    <Label fx:id="totalBalanceLabel" text="\$0.00" style="-fx-text-fill: white; -fx-font-size: 32; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="15" styleClass="card" VBox.vgrow="ALWAYS">
                    <Label text="Recent Transactions" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    <TableView fx:id="transactionTable" prefHeight="400" style="-fx-background-color: transparent;">
                        <columns>
                            <TableColumn fx:id="colDate" text="Date" prefWidth="200"/>
                            <TableColumn fx:id="colDescription" text="Description" prefWidth="400"/>
                            <TableColumn fx:id="colAmount" text="Amount" prefWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>