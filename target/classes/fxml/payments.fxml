<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<BorderPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.frontend.controller.PaymentController">

    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <left>
        <VBox spacing="20" prefWidth="250" styleClass="sidebar">
            <padding><Insets top="20" left="15" right="15"/></padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="40" preserveRatio="true">
                    <Image url="@../assets/images/logo.jpeg" />
                </ImageView>
                <Label text="SecureBank" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>

            <Button text="Dashboard" onAction="#handleDashboardNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>
            <Button text="Transfer" onAction="#handleDashboardNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>
            <Button text="Payments" styleClass="sidebar-btn-active" maxWidth="Infinity"/>
            <Button text="Cards" onAction="#handleCardsNavigation" styleClass="sidebar-btn" maxWidth="Infinity"/>

            <Region VBox.vgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" styleClass="sidebar-btn-logout" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f8f9fa;">
            <VBox spacing="30" style="-fx-padding: 40;">
                <VBox spacing="5">
                    <Label text="Bill Payments" style="-fx-font-size: 26; -fx-font-weight: bold;"/>
                    <Label text="Pay your utilities and services instantly" style="-fx-text-fill: #7f8c8d;"/>
                </VBox>

                <HBox spacing="30">
                    <VBox spacing="20" styleClass="card" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                        <Label text="New Payment" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                        <VBox spacing="10">
                            <Label text="Select Biller" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="billerSelector" promptText="Choose a provider" maxWidth="Infinity" style="-fx-pref-height: 45;"/>
                        </VBox>

                        <VBox spacing="10">
                            <Label text="From Account" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="paymentAccountSelector" maxWidth="Infinity" style="-fx-pref-height: 45;"/>
                        </VBox>

                        <VBox spacing="10">
                            <Label text="Amount ($)" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="amountField" promptText="0.00" style="-fx-pref-height: 45;"/>
                        </VBox>

                        <Button text="Authorize Payment" onAction="#handlePayment" maxWidth="Infinity"
                                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-pref-height: 50; -fx-cursor: hand;"/>

                        <Label fx:id="statusLabel" alignment="CENTER" maxWidth="Infinity" />
                    </VBox>

                    <VBox spacing="15" prefWidth="350">
                        <Label text="Quick Pay" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                        <Button onAction="#handleElectricPay" maxWidth="Infinity" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                            <graphic>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="âš¡" style="-fx-font-size: 20;"/>
                                    <VBox>
                                        <Label text="Electric Bill" style="-fx-font-weight: bold;"/>
                                        <Label text="Due: $89.99" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>

                        <Button onAction="#handleInternetPay" maxWidth="Infinity" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                            <graphic>
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <Label text="ðŸŒ" style="-fx-font-size: 20;"/>
                                    <VBox>
                                        <Label text="Internet Service" style="-fx-font-weight: bold;"/>
                                        <Label text="Due: $79.99" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
                                    </VBox>
                                </HBox>
                            </graphic>
                        </Button>
                    </VBox>
                </HBox>

                <VBox spacing="15" styleClass="card" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;">
                    <Label text="Payment History" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    <TableView fx:id="paymentTable" prefHeight="300" style="-fx-background-color: transparent;">
                        <columns>
                            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                            <TableColumn fx:id="colBiller" text="Biller" prefWidth="300"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
                            <TableColumn fx:id="colAmount" text="Amount" prefWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>